<nav class="navbar navbar-light bg-light justify-content-between">
    <h1>Post<a class="navbar-brand"></a></h1>
    <form class="form-inline">
        <input class="form-control mr-sm-2" type="search" placeholder="Buscar post" aria-label="Search" name="title">
        <button class="btn btn-outline-info my-2 my-sm-0" type="submit">Buscar</button>
    </form>
</nav>

<table class="table">
<div class="row">
    <div class="col -md-3"> 
        <tr>
            <th>Título</th>
            <th>Fecha de ingreso</th>
            <th>Imágen</th>
            <th>Contenido</th>
        </tr>
   
        <% @post.each do |post|%>
        <tr>
        
            <td><%= post.title %></td>
            <td><%= post.created_at.strftime("%F") %></td>
            <td><%= post.image_url %></td>
            <td><%= post.content %></td>
        <% end%>
        </tr>
    </div>
</div>
</table>
<p>Crea un <%=link_to 'Post aquí', posts_dashboard_path %></p> 